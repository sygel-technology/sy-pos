<templates id="template" xml:space="preserve">
    <t t-inherit="point_of_sale.NumberPopup" t-inherit-mode="extension" owl="1">
        <xpath expr="//header" position="attributes">
            <attribute name="style">margin-bottom: 3px !important;</attribute>
        </xpath>
        <xpath expr="//header" position="inside">
            <div>
                <select t-if="props.discountPerLine" name="disc_policy" id="disc_policy">
                    <option value="replace" t-att-selected="props.discountPerLineMethod == 'replace'">
                        <t>Replace</t>
                    </option>
                    <option value="sum" t-att-selected="props.discountPerLineMethod == 'sum'">
                        <t>Sum</t>
                    </option>
                </select>
            </div>
        </xpath>
    </t>
</templates>
