<odoo>
    <record id="pos_discount_per_line_pos_config_view_form" model="ir.ui.view">
        <field name="name">pos.discount.per.line.pos.config.view.form</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='manual_discount']/../.." position="after">
                <div class="col-xs-12 col-lg-6 o_setting_box" >
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Discount per Line Default Method</span>
                        <div class="text-muted">
                            'Replace' will replace the current discount applied on every line.<br/>
                            'Sum' will sum the selected discount to the current discounton each line.
                        </div>
                        <div class="content-group mt16">
                            <label for="discount_per_line" string="Discount per Line"/>
                            <field name="discount_per_line"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
